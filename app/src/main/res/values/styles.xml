<resources>

    <style name="Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopularMovies" parent="Base" />

    <style name="PopularMovies.Home">
        <item name="android:navigationBarColor">@color/immersive_bars</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="PopularMovies.MovieDetail">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
